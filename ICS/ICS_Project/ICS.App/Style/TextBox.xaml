<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ICS.App.Style">
    <Style x:Key="TextInBox" TargetType="TextBox">
        <Setter Property="FontStyle" Value="Italic"/>
        <Setter Property="Background" Value="#232428"/>
        <Setter Property="Foreground" Value="#2febecf0"/>
        <Setter Property="BorderBrush" Value="#121317"/>
    </Style>
    <Style x:Key="TextInPasswordBox" TargetType="PasswordBox">
        <Setter Property="FontStyle" Value="Italic"/>
        <Setter Property="Background" Value="#232428"/>
        <Setter Property="Foreground" Value="#2febecf0"/>
        <Setter Property="BorderBrush" Value="#121317"/>
    </Style>
</ResourceDictionary>