{block head}
	<link href="{$basePath}/css/hallEdit.css" rel="stylesheet" type="text/css" />
{/block}

{block content}
	<div class="hall-edit">
		<div class="head">
			{if $hall}
				<h1><i class="fa fa-edit"></i> Úprava sálu {$hall->getTitle()}</h1>
			{else}
				<h1><i class="fa fa-plus"></i> Přidání nového sálu</h1>
			{/if}
		</div>
		{control hallEditForm}
	</div>
{/block}
